[user]
	email = ben.mayoras@gmail.com
	name = Ben Mayoras
[core]
	autocrlf = input
	editor = nvim
[alias]
	last = log --stat -1
        c = checkout
        b = branch
	unstage = restore --staged
        pullod = pull origin develop
	pick = cherry-pick
	df = diff -w --word-diff
	pop = stash pop
	amend = commit --amend
	s = status
	d = diff
	dt = difftool --minimal --ignore-all-space
	prev = checkout @{-1}
	current = rev-parse --abbrev-ref HEAD
	dag = log --graph

[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/libexec/git-core/git-credential-manager-core.exe
	credentialStore = gpg
	helper = 
	helper = /usr/local/bin/git-credential-manager

# From: https://www.grzegorowski.com/using-vim-or-neovim-nvim-as-a-git-mergetool
# define command which will be used when "nvim" is set as a merge tool
[mergetool "nvim"]
        cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

# set "nvim" as tool for merging
[merge]
        tool = nvim

# automatically launch merge tool without displaying a prompt
[mergetool]
        prompt = false
[init]
	defaultBranch = master
[credential "https://dev.azure.com"]
	useHttpPath = true
